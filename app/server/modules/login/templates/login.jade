doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width')
		title HouseMart
		link(rel='stylesheet', href='assets/shared/libs/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='assets/shared/libs/bootstrap/css/bootstrap-theme.css')
		link(rel='stylesheet', href='assets/shared/styles/css/main.css')
		link(rel='stylesheet', href='assets/modules/login/styles/login_main.css')
		script(src='assets/shared/libs/jquery/jquery-1.12.2.min.js')
	body
		.container
			#loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
				.row
					.iconmelon
				.panel.panel-default
					.panel-heading
						.panel-title.text-center
							b HouseMart
					.panel-body
						form#login-form.form-horizontal(name='form', enctype='application/x-www-form-urlencoded', method='POST', action='/login')
							.input-group
								span.input-group-addon
									i.glyphicon.glyphicon-user
								input#username.form-control(type='text', name='username', value='', placeholder='Username')
							.input-group
								span.input-group-addon
									i.glyphicon.glyphicon-lock
								input#password.form-control(type='password', name='password', placeholder='Password')
							.form-group
								// Button
								.col-sm-12.controls
									button.btn.btn-primary.pull-right(type='submit')
										i.glyphicon.glyphicon-log-in
										|  Log in
		#particles
		script(src='assets/shared/scripts/particleBackground.js')
		script(src='assets/modules/login/scripts/login_main.js')
