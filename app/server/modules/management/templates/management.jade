doctype html
html(lang='en', ng-app="HouseMart")
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width')
		title HouseMart

		link(rel='stylesheet', href='/assets/libs/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='/assets/libs/bootstrap/css/bootstrap-theme.css')
		link(rel='stylesheet', href='/assets/shared/styles/css/price-tag.css')
		link(rel='stylesheet', href='/assets/modules/postLoader/styles/postLoader.css')
		link(rel='stylesheet', href='/assets/shared/styles/css/main.css')

	body(ng-cloak)
		header
			include /app/server/modules/headerBar/templates/headerBar.jade

		.container.col-md-10.col-sm-offset-1
